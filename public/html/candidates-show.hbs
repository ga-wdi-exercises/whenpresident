<div data-ng-if="!candShowVM.candidate">
  <h2>That candidate couldn't be found!</h2>
</div>
<div data-ng-if="candShowVM.candidate">

  <h2>{{candShowVM.candidate.name}} for President in {{candShowVM.candidate.year}}!</h2>
  <div>
    <input type="number" placeholder="Year" data-ng-model="candShowVM.candidate.year" />
    <button data-ng-click="candShowVM.update()">Update</button>
    <button data-ng-click="candShowVM.delete()">Delete</button>
  </div>
</div>
