<h2>{{candidates.length}} candidates</h2>
{{#each candidates as |candidate index|}}
<h3>
  <a href="/candidates/{{candidate.name}}">{{candidate.name}} for President in {{candidate.year}}</a>
</h3>
{{/each}}

<form action="/candidates" method="post"> <!-- method is important and action = route-->
  <input type="text" name="candidate[name]" placeholder = "Name" /> <!-- name = value -->
  <input type="number" name="candidate[year]" placeholder = "Year" />
  <button type="submit"> Run for Office </button>
</form>
