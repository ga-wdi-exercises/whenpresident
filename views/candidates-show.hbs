{{#if candidate}}
<h2>{{candidate.name}} for President in {{candidate.year}}!</h2>


<form action="/candidates/{{candidate.name}}" method="post">
  <input type="text" name="candidate[name]" placeholder="Name" value="{{candidate.name}}"/>
  <input type="text" name="candidate[year]" placeholder="Year" value="{{candidate.year}}"/>
  <button type="submit">Update Platform</button>
</form>
<form action="/candidates/{{candidate.name}}/delete" method="post">
  <button type="submit">Drop out</button>
</form>

{{else}}
<h2>That candidate couldn't be found!</h2>
{{/if}}
